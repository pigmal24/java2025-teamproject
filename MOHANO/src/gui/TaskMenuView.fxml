<?xml version="1.0" encoding="utf-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="gui.TaskMenuController" stylesheets="@style.css">
	<top>
		<Label text="내 과제 목록" styleClass="header"/>
	</top>

	<center>
		<ListView fx:id="taskListView"/>
	</center>

	<right>
		<VBox spacing="10" alignment="TOP_RIGHT" padding="10">
			<Button text="과제 추가" onAction="#addTask"/>
			<Button text="과제 수정" onAction="#editTask"/>
			<Button text="과제 삭제" onAction="#deleteTask"/>
		</VBox>
	</right>
</BorderPane>